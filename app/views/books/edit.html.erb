<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
<div class="firld">
   <h4>Title</h4>

  <%= f.text_field :title %>
</div>

<div class="field">
  <h4>Body</h4>

  <%= f.text_field :body %>

</div>

  <div class="actions">
  <%= f.submit "Update Book" %>
</div>
<% end %>

<%= link_to "Show",book_path(@book.id) %>
